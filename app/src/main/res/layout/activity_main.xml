<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080A0D"
    android:backgroundTint="#0F1214"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    app:layout_goneMarginLeft="30dp"
    app:layout_goneMarginTop="40dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:srcCompat="@drawable/calculator" />

    <EditText
        android:id="@+id/edFirstValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Enter First Number"
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/ediSecondValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Enter Second value"
        android:inputType="number"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#EDE5E5"
        android:backgroundTint="#E6D8D8"
        android:padding="10dp"
        android:text="@string/plus"
        android:textColor="#FAFAFB"
        android:textColorHighlight="#FFFEFE"
        android:textColorLink="#E6D5D5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:rippleColor="#D4D7E2"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#040000"
        android:backgroundTint="#E6D8D8"
        android:padding="10dp"
        android:text="-"
        android:textColor="#FAFAFB"
        android:textColorHighlight="#FFFEFE"
        android:textColorLink="#E6D5D5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:rippleColor="#32467F"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#040000"
        android:backgroundTint="#E6D8D8"
        android:padding="10dp"
        android:text="*"
        android:textColor="#FAFAFB"
        android:textColorHighlight="#FFFEFE"
        android:textColorLink="#E6D5D5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:rippleColor="#32467F"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#040000"
        android:backgroundTint="#E6D8D8"
        android:padding="10dp"
        android:text="/"
        android:textColor="#FAFAFB"
        android:textColorHighlight="#FFFEFE"
        android:textColorLink="#E6D5D5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:rippleColor="#32467F"
        tools:visibility="visible" />

</LinearLayout>